{
  "name": "study-planner-pro",
  "version": "1.0.0",
  "description": "A professional study planner desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": ["study", "planner", "productivity"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.studyplanner.app",
    "productName": "Study Planner Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "icon.png"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "icon.png"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "icon.png",
      "category": "Utility"
    }
  }
}
